<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/fragment_holder"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".view.ui.MainActivity">

        <TextView
                android:text="@string/search_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/defaultText" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/text_margin" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/text_margin" android:layout_marginTop="@dimen/text_margin_top"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="@dimen/text_margin_bottom"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textAppearance="?attr/textAppearanceListItem"
        />
    </android.support.constraint.ConstraintLayout>
</FrameLayout>


